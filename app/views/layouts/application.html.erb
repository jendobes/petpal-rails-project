<!DOCTYPE html>

<html>
  <head>
    <script src="/assets/jquery.js" type="text/javascript"></script>
    <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
    <%= javascript_include_tag params[:controller] if javascript_path params[:controller]%>

  <style>
    nav {
    margin-bottom: 50px;
  }
  </style>

    <title>Petpal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% flash.each do |key, value| %>
      <div><h2><%= value %></h2></div>
    <% end %>

<nav>
  <div class='nav-wrapper'>
    <%= link_to '/' do %> <%= image_tag("logo.png", :class => "brand-logo center") %> <%end%>
    <!-- <a href="/" class="brand-logo center"><img src='logo.png' alt='logo'></a> -->
    <ul>
      <li><%= link_to 'PetPal', root_path %></li>
      <li><%= link_to "Our Pets", '/pets' %></li>
      <li><%= link_to "Shelters", '/shelters' %></li>
      <% if current_user %>
        <li><%= link_to 'Profile', owner_path(current_user) %></li>
        <li><%= link_to "Log Out", logout_path, method:'delete' %></li>
      <% end %>
    </ul>
  </div>
</nav>

  </head>


  <body>
    <div class="container">
      <%= yield %>
    </div>

  </body>

</html>

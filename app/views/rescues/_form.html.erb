<%= form_for [@owner, @rescue] do |f| %>
<% if @rescue.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@rescue.errors.count, "error") %> prohibited this pet from being saved:
    </h2>

    <ul>
    <% @rescue.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<br>


<h4>I rescued <%= @pet.name %></h4>

<br>

<div>
<%= f.label :story, "Tell us the story:" %>
<br>
<%= f.text_area :story %>
</div>

<%= f.hidden_field :owner_id, :value => @owner.id %>
<%= f.hidden_field :pet_id, :value => @pet.id %>

<%= f.submit id: 'rescueSubmit'%>

<%end%>
